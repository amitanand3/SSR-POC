<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="./../css/products.css">
        <script src="./../helpers/helper.js"></script>
        <title>Products</title>
    </head>

    <body>
        <h1>Products Home</h1>
        <div class="container">
        {{#each products}} 
            <div class="prod">
                <img src={{this.imgUrl}} />
                <div class="center">
                    <label>{{this.name}}</label>
                </div>
                <div class="center">
                        <label>$ {{this.price}}</label>
                </div>
                <div class="center">
                    <button onclick="addToCart({{getThis}})">Add to cart</button>
                </div>
            </div>
        {{/each}}
        </div>
        <div class="center">
            <button onclick="goToCart()">Go to cart</button>
        </div>
    </body>
</html>